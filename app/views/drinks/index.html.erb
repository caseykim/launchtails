<div class="row">
  <div class="large-12">
    <h1>Drinks</h1>

    <%- if !@drinks.empty? -%>
      <table>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Featured</th>
          <th>Category</th>
          <th>Alcohol Level</th>
          <th></th>
        </tr>

        <%- @drinks.each do |drink| -%>
          <tr>
            <td><%= drink.title %></td>
            <td><%= truncate(drink.description, length: 30) %></td>
            <td><%= drink.featured %></td>

            <td>
              <%- if drink.category -%>
                <%= drink.category.name %>
              <%- end -%>
            </td>

            <td><%= drink.alcohol_level %></td>
            <td>
              <%= link_to 'Delete', drink_path(drink), method: :delete %>
            </td>
          </tr>
        <%- end -%>
      </table>

    <%- end -%>
  </div>
</div>
