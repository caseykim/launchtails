<%= form_for drink do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :featured %>
  <%= f.check_box :featured %>

  <%= f.label :category %>
  <%= f.collection_select :category, Category.all, :id, :name %>

  <%= f.label :alcohol_level %>
  <% Drink::ALCOHOL_LEVELS.each do |level| %>
    <%=f.radio_button :alcohol_level, level%>
    <%=f.label :alcohol_level, value: level%>
  <% end %>

  <%= f.submit "Add Drink" %>
<%- end -%>
